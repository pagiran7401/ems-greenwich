# =============================================================================
# EVENTO - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# -----------------------------------------------------------------------------
# MongoDB Configuration
# -----------------------------------------------------------------------------
MONGO_ROOT_USERNAME=eventoadmin
MONGO_ROOT_PASSWORD=eventopassword

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
NODE_ENV=development
PORT=5000
MONGODB_URI=mongodb://eventoadmin:eventopassword@localhost:27017/evento_db?authSource=admin

# JWT Configuration (change in production!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=30m

# -----------------------------------------------------------------------------
# Client Configuration
# -----------------------------------------------------------------------------
VITE_API_URL=http://localhost:5000/api

# -----------------------------------------------------------------------------
# Stripe Configuration (TEST MODE ONLY)
# -----------------------------------------------------------------------------
# Get test keys from: https://dashboard.stripe.com/test/apikeys
STRIPE_PUBLIC_KEY=pk_test_your_test_public_key
STRIPE_SECRET_KEY=sk_test_your_test_secret_key

