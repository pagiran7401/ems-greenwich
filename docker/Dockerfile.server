FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY server/package*.json ./server/
COPY shared/package*.json ./shared/

# Install dependencies
RUN npm install

# Copy source code
COPY shared ./shared
COPY server ./server

WORKDIR /app/server

# Expose port
EXPOSE 5000

# Start development server
CMD ["npm", "run", "dev"]
